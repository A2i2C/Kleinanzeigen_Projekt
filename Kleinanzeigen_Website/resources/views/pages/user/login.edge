<!DOCTYPE html>
<html lang="de">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
  @vite('resources/css/login.css')
  <style>
    body {
      height: 100vh;
    }
  </style>
</head>

<body class="d-flex justify-content-center align-items-center">
 
  <div class="page-container p-2">
    <div class="d-flex align-items-center flex-column-reverse ">
      <h1>Login</h1>
      <img src="images/logo.png" width="30%" alt="logo">
    </div>

    <form action="/login" method="post">
      {{ csrfField() }}
      <div class="d-flex align-items-center flex-column">
        <label for="username">Benutzername:</label>
        <input type="text" id="username" name="benutzername" placeholder="Benutzername eingeben">
        <label for="password">Passwort:</label>
        <input type="password" id="password" name="password" placeholder="Passwort eingeben">
        <button type="submit">Anmelden</button>
      </div>
      @if (error)
      <div class="alert alert-danger mt-3" role="alert">
        {{ error }}
      </div>
      @end
    </form>

    <div class="text-start">
      <p class="mt-3">Noch kein Account? <a href="registrierung">Hier registrieren</a></p>
      <p><a href="/">Zur√ºck zur Homepage</a></p>
    </div>
  </div>

</body>

</html>